---
import BaseHead from "./BaseHead.astro";
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
  image?: string;
  keywords?: string;
}

const { title, description, image, keywords } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={title}
      description={description}
      image={image}
      keywords={keywords}
    />
  </head>
  <body>
    <slot />
  </body>
</html>
